{
    "type": "origins:multiple",
    "hidden": true,

    "fill_offhand": {
        "type": "origins:active_self",
        "entity_action": [
            {
                "type": "origins:execute_command",
                "command": "item replace entity @s weapon.offhand from entity @s weapon.mainhand"
            },
            {
                "type": "origins:execute_command",
                "command": "playsound minecraft:item.armor.equip_iron player @s ~ ~ ~ 1.0 1.5"
            }
        ],
        "key": {
            "key": "key.use"
        },
        "condition": {
            "type": "origins:all_of",
            "conditions": [
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "basicweapons:iron_dagger"
                        }
                    }
                },
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "offhand",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "minecraft:air"
                        }
                    }
                }
            ]
        }
    },

    "clear_offhand": {
        "type": "origins:action_over_time",
        "falling_action": {
            "type": "origins:replace_inventory",
            "slot": "weapon.offhand",
            "stack": {
                "id": "minecraft:air"
            }
        },
        "interval": 1,
        "condition": {
            "type": "origins:all_of",
            "conditions": [
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "basicweapons:iron_dagger"
                        }
                    }
                },
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "offhand",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "basicweapons:iron_dagger"
                        }
                    }
                }
            ]
        }
    },

    "clear_mainhand": {
        "type": "origins:action_over_time",
        "falling_action": {
            "type": "origins:replace_inventory",
            "slot": "weapon.mainhand",
            "stack": {
                "id": "minecraft:air"
            }
        },
        "interval": 1,
        "condition": {
            "type": "origins:all_of",
            "conditions": [
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "basicweapons:iron_dagger"
                        }
                    }
                },
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "offhand",
                    "item_condition": {
                        "type": "origins:ingredient",
                        "ingredient": {
                            "item": "basicweapons:iron_dagger"
                        }
                    }
                }
            ]
        }
    }
}